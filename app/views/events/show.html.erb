  <div class="btn-primary">PARTICIPATE +</div>
</div>

<div style="width: 100%; height: 300px; margin-top: 75px"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
