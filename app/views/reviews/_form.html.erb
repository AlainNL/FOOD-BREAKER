<%= simple_form_for([ booking, review ],
                    data: {
                      controller: "bar-rating",
                      insert_in_list_target: "form",
                      action: "submit->insert-in-list#send"
                    }) do |f| %>
  <%= f.input :rate, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: { bar_rating_target: 'input'}} %>
  <%= f.input :content, as: :text, label: "Let some comments" %>
              <%# # input_html: { class: 'bg-danger' } %>
  <%= f.submit "ADD REVIEW +", class: "btn-foodbreaker" %>
<% end %>
